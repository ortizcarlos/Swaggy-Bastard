<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-chevron-left"></i> Posts recientes</a>
    {{/if}}
    <span class="page-number">Pagina {{page}} de {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Posts anteriores <i class="fa fa-chevron-right"></i></a>
    {{/if}}
</nav>